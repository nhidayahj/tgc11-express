{{#extends 'base'}}

{{#block 'add-movie'}}
<button class="mb-3"> 
    <a href="/movies/create">Create New Movie</a>
</button>
{{/block}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>Movie Title</th>
            <th>Movie Plot</th>
        </tr>
    </thead>
    {{#each all_movies}}
    <tr>
        <td>{{this.title}}</td>
        <td>{{this.plot}}</td>
    </tr>
    {{/each}}


</table>
{{/block}}

{{/extends}}